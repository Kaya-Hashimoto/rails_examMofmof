<h1>物件一覧</h1>
  <%= link_to '物件を登録する', new_property_path %>
    <table>
      <tr>
        <th>物件名</th>
        <th>賃料</th>
        <th>築年数</th>
        <th>住所</th>
        <th>備考</th>
      </tr>

      <% @properties.each do |property| %>
      <tr>
        <td><%= property.property_name %></td>
        <td><%= property.rent %></td>
        <td><%= property.built_year %></td>
        <td><%= property.address %></td>
        <td><%= property.remark %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: {confirm: '本当に削除しますか？'} %></td>
      </tr>
      <% end %>
    </table>